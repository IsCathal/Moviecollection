<h1>Add a Movie</h1>
<% if @movie.errors.any? %>
  <h2>You got an error</h2>
  <ul>
    <% @movie.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with(model: @movie, local: true, data: { turbo: false }) do |f| %>
  <p>
    <%= f.label :title, "Title" %><br/>
    <%= f.text_field :title %>
  </p>

  <p>
  <%= f.label :director, "Director" %><br/>
  <%= f.text_field :director %>
</p>

<p>
<%= f.label :release_year, "Release Year" %><br/>
<%= f.text_field :release_year %>
</p>

<h6>Genres:</h6>
<%= f.collection_check_boxes(:genre_ids, Genre.order(:name), :id, :name) %>

<p>
  <%= f.submit %>
</p>
<% end %>