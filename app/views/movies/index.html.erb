<h1>Welcome to the Movie Collection Management App!</h1>
<table class="table">
  <thead>
    <tr>
      <th>Movies</th>
      <th>Genres</th>
      <th>Views</th>
      <th>Edit</th>

    </tr>
  </thead>
  <tbody>
  <% @movies.each do |movie| %>
    <tr>
      <td><%= movie.display_movie_director_realse_year(movie) %></td>
      <td><%= "Genres: #{movie.display_genres(movie)}" %></td>
      <td>Views: <%= movie.view_count %> <%= "Most Viewed"  if movie.most_watched? %></td>
      <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
    </tr>
  <% end %>
</tbody>
   
</table>