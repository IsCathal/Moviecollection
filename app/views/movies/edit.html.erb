<h1>Hi Edit Page</h1>

<%= form_with(model: @movie, local: true, data: { turbo: false }) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :director %><br>
    <%= f.text_area :director %>
  </p>

  <p>
<%= f.label :release_year, "Enter a release_year" %><br/>
<%= f.text_field :release_year %>
</p>

<p>
<%= f.label :genres, "Enter a genres" %><br/>
<%= f.text_field :genres %>
</p>

  <p>
    <%= f.submit %>
  </p>

  <% end %>